<!-- Tệp: views/admin/AceptOrder.hbs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

    <link rel="stylesheet" href="/stylesheets/password.css">
</head>

<body>
   <!-- Mã HTML không thay đổi -->
<body>
    <h1>Order Details</h1>
    <div id="orderList"></div>
    <p>
     {{this.orderName}}
    </p> <!-- Thêm một div để chứa danh sách đơn hàng -->
</body>
<!-- Đoạn mã JavaScript -->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    // Lặp qua từng đơn hàng và tạo nội dung
    dataFromServer.orderData.forEach(function(order) {
        var orderItem = document.createElement("div");
        orderItem.classList.add("order-item");

        var orderID = document.createElement("p");
        orderID.textContent = "Order ID: " + order._id;

        var orderCode = document.createElement("p");
        orderCode.textContent = "Code: " + order.code;

        var orderName = document.createElement("p");
        orderName.textContent = "Name: " + order.name;

        var acceptButton = document.createElement("button");
        acceptButton.textContent = "Accept Order";
        acceptButton.addEventListener("click", function() {
            acceptOrder(order._id); // Gọi hàm khi nút được nhấp
        });

        // Thêm các phần tử vào orderItem
        orderItem.appendChild(orderID);
        orderItem.appendChild(orderCode);
        orderItem.appendChild(orderName);
        orderItem.appendChild(acceptButton);

        // Thêm orderItem vào #orderList
        document.getElementById("orderList").appendChild(orderItem);
    });
</script>

</html>

